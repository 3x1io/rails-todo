<div class="card-header d-flex justify-content-between">
  <span>
  <i class="fa fa-list"></i>
  <b>Todo Lists</b>
  </span>
  <%= link_to 'New Todo List', new_todo_list_path, :class=>'btn btn-primary btn-sm' %>
</div>
<ul class="list-group list-group-flush">
    <% @todo_lists.each do |todo_list| %>
    <li class="list-group-item d-flex justify-content-between">
      <div>
        <h5 class="m-0">
          <b><%= link_to todo_list.title, todo_list %></b>
          <span class="badge badge-<%= todo_list.badge_color %>"><%= todo_list.status %></span>
        </h5>
        <p class="text-secondary"><small><%= todo_list.percent_complete %>% Complete (<%= todo_list.completed_items %>/<%= todo_list.total_items %> Todo Item)</small></p>
      </div>
      <div>
        <%= link_to edit_todo_list_path(todo_list), :class=>'btn btn-dark btn-sm' do %>
        <i class="fa fa-edit"></i> Edit
        <% end %>
      </div>
    </li>
    <% end %>
</ul>